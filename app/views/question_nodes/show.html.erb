<div id="top-margin">
	<div class="col-lg-12 text-center">
		<div class="well">

			<h1><%= @question.text %></h1>
			<hr class="star-primary">

			<div class="text-center">
				<% @answers.each do |answer| %>
					<%= link_to answer.text, "/answer/#{answer.id}", method: :post, class: "btn btn-primary" %>
				<% end %>
			</div>
		</div>
	</div>
</div>




